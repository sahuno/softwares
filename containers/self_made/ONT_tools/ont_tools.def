%environment
    export PATH="/usr/local/bin:$PATH"
    # export PATH="$HOME/.cargo/bin:$PATH"

%runscript
    echo "This is a Singularity container for Samtools, Oxford Nanopore basecaller Dorado, Python, and Rust."
    exec "$@"

